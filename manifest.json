{
    "name": "Pomodoro Chrome Extension",
    "description": "Boost your productivity with the pomodoro helper",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "notifications"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/tomato16.png",
            "32": "/images/tomato32.png",
            "48": "/images/tomato48.png",
            "128": "/images/tomato128.png"
        }
    },
    "web_accessible_resources": [
        "/images/tomato128.png"
    ],
    "icons": {
        "16": "/images/tomato16.png",
        "32": "/images/tomato32.png",
        "48": "/images/tomato48.png",
        "128": "/images/tomato128.png"
    }
}