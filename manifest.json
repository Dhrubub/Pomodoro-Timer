{
    "name": "Pomodoro Chrome Extension",
    "description": "Boost your productivity with the pomodoro helper",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/tomato16.png",
            "32": "/images/tomato32.png",
            "48": "/images/tomato48.png",
            "128": "/images/tomato128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "/images/tomato128.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "/images/tomato16.png",
        "32": "/images/tomato32.png",
        "48": "/images/tomato48.png",
        "128": "/images/tomato128.png"
    }
}