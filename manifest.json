{
    "name": "Pomodoro Chrome Extension",
    "description": "Boost your productivity with the pomodoro helper",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "notifications"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "tomato.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}